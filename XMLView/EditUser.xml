<view>
    <columns>
        <group name="main" numcolumns="12">
            <column name="usuario" numcolumns="2" order="100">
                <widget type="text" fieldname="username" maxlenght="50" readonly="dinamic" required="true" />
            </column>
            <column name="nombre" order="110">
                <widget type="text" fieldname="name" maxlenght="100" required="true" />
            </column>
            <column name="email" numcolumns="3" order="120">
                <widget type="text" fieldname="email" maxlenght="100" required="true" icon="fa-regular fa-envelope" />
            </column>
            <column name="new-password" title="Nueva contraseña" numcolumns="2" order="130">
                <widget type="password" fieldname="newPassword" icon="fas fa-key"/>
            </column>
            <column name="repeat-new-password" title="Repetir contraseña" numcolumns="2" order="140">
                <widget type="password" fieldname="newPassword2" icon="fas fa-key"/>
            </column>
        </group>
        <group name="others" numcolumns="12">
            <column name="activo" order="200">
                <widget type="checkbox" fieldname="enabled"/>
            </column>
        </group>
    </columns>
</view>