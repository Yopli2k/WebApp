<view>
    <columns>
        <group name="main" numcolumns="12">
            <column name="nombre" order="110">
                <widget type="text" fieldname="name" required="true" maxlenght="100" icon="fa-regular fa-user" />
            </column>
            <column name="documento" numcolumns="3" order="120">
                <widget type="text" fieldname="document" maxlenght="30" required="true" icon="fa-regular fa-address-card" />
            </column>
            <column name="creation" title="Fec. Alta" numcolumns="2" order="140">
                <widget type="date" fieldname="creationdate" readonly="true" icon="fa-regular fa-calendar" />
            </column>
        </group>
        <group name="address" numcolumns="12">
            <column name="direccion" title="dirección" order="200">
                <widget type="text" fieldname="address" maxlenght="100" required="true" icon="fa-regular fa-map" />
            </column>
            <column name="telefono" title="Teléfono" numcolumns="2" order="210">
                <widget type="text" fieldname="phone" maxlenght="10" required="true" icon="fa-solid fa-mobile-screen" />
            </column>
            <column name="email" numcolumns="3" order="220">
                <widget type="text" fieldname="email" maxlenght="100" required="true" icon="fa-regular fa-envelope" />
            </column>
        </group>
        <group name="others" numcolumns="12">
            <column name="activo" order="200">
                <widget type="checkbox" fieldname="enabled"/>
            </column>
            <column name="verificado" order="200">
                <widget type="checkbox" fieldname="verified"/>
            </column>
        </group>
    </columns>
</view>